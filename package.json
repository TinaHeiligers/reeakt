{
  "name": "reeakt",
  "version": "1.1.0",
  "description": "A React.js boilerplate to awesome web applications",
  "scripts": {
    "start": "cross-env NODE_ENV=production babel-node devtools/server/production",
    "dev": "cross-env NODE_ENV=development webpack-dashboard -- babel-node devtools/server/development",
    "build": "rm -rf dist/ && cross-env NODE_ENV=production webpack --verbose --colors --display-error-details --progress --config devtools/webpack.config.prod.js",
    "prod": "rm -rf dist/ && npm run build && npm run start",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "profile": "cross-env NODE_ENV=production webpack --config devtools/webpack.config.prod.js --profile --json > profile.json",
    "webpack-bundle-analyzer": "npm run profile && webpack-bundle-analyzer ./profile.json ./dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/obetomuniz/reeakt.git"
  },
  "keywords": [
    "server-side-rendering",
    "react",
    "react-router-v4",
    "redux",
    "redux-saga",
    "immutable",
    "redux-immutable",
    "styled-components-v2",
    "hot-module-reload",
    "webpack2",
    "webpack-bundle-analyzer",
    "webpack-dashboard",
    "jest",
    "enzyme",
    "eslint",
    "ducks",
    "axios",
    "express",
    "boilerplate"
  ],
  "author": "Beto Muniz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/obetomuniz/reeakt/issues"
  },
  "homepage": "https://github.com/obetomuniz/reeakt#readme",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/routes.js",
      "!src/store.js",
      "!src/index.js",
      "!<rootDir>/node_modules/",
      "!<rootDir>/devtools/"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/devtools/mocks/file.js"
    }
  },
  "dependencies": {
    "axios": "^0.16.1",
    "express": "^4.15.2",
    "express-handlebars": "^3.0.0",
    "immutable": "^3.8.1",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-helmet": "^5.0.3",
    "react-redux": "^5.0.4",
    "react-router-config": "^1.0.0-beta.3",
    "react-router-dom": "^4.1.1",
    "react-router-redux": "^5.0.0-alpha.6",
    "redux": "^3.6.0",
    "redux-immutable": "^4.0.0",
    "redux-saga": "^0.14.6",
    "styled-components": "next"
  },
  "devDependencies": {
    "axios-mock-adapter": "^1.8.1",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-loader": "^6.4.1",
    "babel-plugin-module-alias": "^1.6.0",
    "babel-plugin-styled-components": "^1.1.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "coveralls": "^2.13.0",
    "cross-env": "^4.0.0",
    "detect-port": "^1.1.1",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-plugin-redux-saga": "^0.3.0",
    "file-loader": "^0.11.1",
    "handlebars-loader": "^1.4.0",
    "html-webpack-plugin": "^2.28.0",
    "image-webpack-loader": "^3.3.0",
    "jest": "^19.0.2",
    "react-addons-test-utils": "^15.5.1",
    "react-hot-loader": "next",
    "react-test-renderer": "^15.5.4",
    "redux-saga-testing": "^1.0.2",
    "uglifyjs-webpack-plugin": "^0.4.3",
    "url-loader": "^0.5.8",
    "webpack": "^2.4.1",
    "webpack-bundle-analyzer": "^2.4.0",
    "webpack-dashboard": "^0.3.0",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-hot-middleware": "^2.18.0",
    "webpack-isomorphic-tools": "^3.0.2"
  }
}
