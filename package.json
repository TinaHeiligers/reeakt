{
  "name": "reeakt",
  "version": "1.5.1",
  "description": "A React.js boilerplate to awesome web applications",
  "scripts": {
    "start": "cross-env NODE_ENV=production babel-node devtools/server",
    "dev": "cross-env NODE_ENV=development babel-node devtools/server",
    "build": "rm -rf dist/ && cross-env NODE_ENV=production webpack --verbose --colors --display-error-details --progress --config devtools/production/webpack.config.js",
    "prod": "rm -rf dist/ && npm run build && npm run start",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "profile": "cross-env NODE_ENV=production webpack --config devtools/production/webpack.config.js --profile --json > profile.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/obetomuniz/reeakt.git"
  },
  "keywords": [
    "server-side-rendering",
    "react",
    "react-router",
    "redux",
    "redux-saga",
    "immutable",
    "redux-immutable",
    "styled-components",
    "hot-module-reload",
    "webpack",
    "jest",
    "enzyme",
    "eslint",
    "ducks",
    "axios",
    "express",
    "boilerplate"
  ],
  "author": "Beto Muniz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/obetomuniz/reeakt/issues"
  },
  "homepage": "https://github.com/obetomuniz/reeakt#readme",
  "jest": {
    "verbose": true,
    "testURL": "http://localhost:3000/",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/routes.js",
      "!src/store.js",
      "!src/index.js",
      "!<rootDir>/node_modules/",
      "!<rootDir>/devtools/"
    ],
    "setupFiles": [
      "<rootDir>/devtools/jest/shim.js",
      "<rootDir>/devtools/jest/setup.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/devtools/jest/file.js"
    }
  },
  "dependencies": {
    "axios": "^0.18.0",
    "enzyme-adapter-react-16": "^1.2.0",
    "express": "^4.16.3",
    "immutable": "^3.8.2",
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "3.0.0-beta.7",
    "react-redux": "^5.0.7",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.3.1",
    "react-router-redux": "^5.0.0-alpha.6",
    "redux": "^4.0.0",
    "redux-immutable": "^4.0.0",
    "redux-saga": "^0.16.0",
    "styled-components": "^3.4.2"
  },
  "devDependencies": {
    "axios-mock-adapter": "^1.15.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.5",
    "babel-plugin-module-alias": "^1.6.0",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.7",
    "detect-port": "^1.2.3",
    "enzyme": "^3.4.1",
    "eslint": "^5.3.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-redux-saga": "^0.9.0",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.4",
    "html-webpack-plugin": "^2.30.1",
    "img-loader": "^2.0.0",
    "jest": "^23.4.2",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^16.4.2",
    "redux-saga-testing": "^1.0.5",
    "style-loader": "^0.19.0",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "url-loader": "^0.5.9",
    "webpack": "^3.6.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.19.1",
    "webpack-isomorphic-tools": "^3.0.5"
  }
}
